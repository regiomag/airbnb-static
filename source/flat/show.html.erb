<!-- source/flats/show.html.erb -->

<!-- Read from data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

<!-- Show header -->
<div class="flat_page_header" style="background-image: linear-gradient(-180deg, rgba(0,101,168,0.1) 0%, rgba(0,36,61,0.4) 50%), url('<%= image_path flat.picture %>')");">
</div>

<%#= image_tag flat.picture, class: "flat_page_header" %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-1 card_flat">
      <h1><%= flat.owner_name class: ""%></h1>
      <p><%= flat.city %></p>
      <%= image_tag flat.owner_picture, style: "width: 100px", class: "img-circle" %>
    </div>
    <div class="col-xs-12 col-sm-4 col-sm-offset-1">
      <!-- <div class="inside-form"> -->
      <form action="">
      <h3>Book this flat</h3>
      <div class="form-group">
        <div class="row">
          <div class="col-xs-6">
            <input type="text" placeholder="check in" class="form-control">
          </div>
          <div class="col-xs-6">
            <input type="text" placeholder="check out" class="form-control">
          </div>
        </div>
      </div>
      <div class="form-group">
        <select name="" id="" class="form-control">
          <option value="1">1 guest</option>
          <option value="2">2 guests</option>
          <option value="3">3 guests</option>
        </select>
      </div>
      <input type="submit" value="subscribe" class="btn btn-block btn-primary" style="width: 100%">
      </form>
    </div>
  </div>
</div>


<!-- Inject flat data in template -->
<div class="container wrapper-description-page">
  <h3>About this flat</h3>
  <h4><%= flat.summary %></h4>
  <p>wifi : <%= flat.wifi ? "yes" : "no" %></p>
</div>



